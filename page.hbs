{{!< default}}
{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}
<nav class="main-nav clearfix">
    <a class="back-button icon-arrow-left" href="{{@blog.url}}">Блог</a>
    <a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/">Подписаться</a>
</nav>
<main class="content" role="main">
    <article class="{{post_class}}">
    {{! Everything inside the #post tags pulls data from the post }}
    {{#post}}{{#contentFor "meta"}}<title>{{title}}</title>
  <meta name="description" content="{{excerpt characters="220"}}">{{/contentFor}}
        <header class="post-header">
            <h1 itemprop="name" class="post-title">{{title}}</h1>
            <div class="post-meta">
                <time itemprop="datePublished" content="{{date format='YYYY-MM-DD'}}" class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD / MM / YYYY"}}</time>
            </div>
        </header>
        <div class="post-content">
            {{content}}
        </div>
        <footer class="post-footer">
        {{! Everything inside the #author tags pulls data from the author }}
        {{#author}}

        {{/author}}

        </footer>
    {{/post}}
    </article>
</main>
