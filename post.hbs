{{!< default}}
{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}
<nav class="main-nav clearfix">
    <a class="back-button icon-arrow-left" href="{{@blog.url}}">Блог</a>
    <a class="subscribe-button icon-feed" href="{{@blog.url}}/rss/">Подписаться</a>
</nav>
<main class="content" role="main">
    <article itemscope itemtype="http://schema.org/Article" class="{{post_class}}">
    {{! Everything inside the #post tags pulls data from the post }}
    {{#post}}{{#contentFor "meta"}}<title>{{title}}</title>
  <meta name="description" content="{{excerpt characters="220"}}">{{/contentFor}}
        <header class="post-header">
            <h1 itemprop="name" class="post-title">{{title}}</h1>
            <div class="post-meta">
                <time itemprop="datePublished" content="{{date format='YYYY-MM-DD'}}" class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD / MM / YYYY"}}</time> {{tags prefix=" on "}}
            </div>
        </header>
        <div itemprop="articleBody" class="post-content">
            {{content}}
        </div>
        <footer class="post-footer">
        {{! Everything inside the #author tags pulls data from the author }}
        {{#author}}
            <section class="author" itemprop="author" itemscope itemtype="http://schema.org/Person">
                <h4><a itemprop="url" href="http://pavel.miroshnichen.co"><span itemprop="name">{{name}}</span></a></h4>
                <div class="author-meta">
                  <span class="author-link"><a href="pavel@miroshnichen.co" rel="nofollow">Написать письмо</a></span>
                </div>
            </section>
        {{/author}}

        </footer>
    {{/post}}
    </article>
</main>
